{
  "permissions": {
    "allow": [
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(findstr:*)",
      "Bash(git push:*)",
      "Bash(dir /s /b)",
      "Bash(node scripts/migrateNotesProcessed.js:*)",
      "Bash(npm install:*)",
      "Bash(npm run build:*)",
      "Bash(git restore:*)",
      "Bash(npm test)",
      "Bash(timeout 5 node:*)",
      "Bash(node -e:*)",
      "Bash(node scripts/migrateUserRoles.js:*)",
      "Bash(xargs:*)",
      "Bash(node --check:*)",
      "Bash(tasklist:*)",
      "Bash(npm run dev:*)",
      "Bash(timeout /t 5 /nobreak)",
      "Bash(netstat:*)",
      "Bash(taskkill //F //PID 38536)",
      "Bash(curl:*)",
      "WebFetch(domain:loggingsucks.com)",
      "Bash(node scripts/migrateDefaultCategories.js:*)",
      "Bash(node scripts/migrateDefaultTags.js:*)",
      "Bash(node scripts/seedRoleConfigs.js:*)",
      "Bash(grep:*)",
      "mcp__ide__getDiagnostics",
      "Bash(cd:*)",
      "Bash(git checkout:*)"
    ],
    "defaultMode": "bypassPermissions"
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/inject-context.mjs",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/capture-observation.mjs",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/finalize-session.mjs",
            "timeout": 10
          },
          {
            "type": "agent",
            "prompt": "Read today's session file from .claude/memory/sessions/ (filename is today's date YYYY-MM-DD.md). If it exists and has observations, append a brief 2-3 sentence summary at the end under a '## Summary' heading describing what was accomplished. Keep it concise.",
            "timeout": 30,
            "statusMessage": "Summarizing session..."
          }
        ]
      }
    ]
  }
}
