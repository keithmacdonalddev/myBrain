{
  "name": "session-viewer",
  "version": "1.0.0",
  "description": "Beautiful desktop app for browsing Claude session history",
  "main": "electron-main.js",
  "homepage": "./",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "react-scripts build && electron-builder",
    "start": "electron ."
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "remark-gfm": "^4.0.0"
  },
  "devDependencies": {
    "react-scripts": "5.0.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.claude.sessionviewer",
    "productName": "Session Viewer",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "build/**/*",
      "electron-main.js",
      "public/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "certificateFile": null,
      "certificatePassword": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
